GridLayout:
    padding: 2,2,2,2
    cols: 1
    TextInput:
        id: text_input
        text: ""
        font_size: 30
        halign: 'right'
        valign: 'bottom'
        size_hint_y: None
        padding: 5,5,5,5
    GridLayout:
        cols: 3

        Button:
            text: "1"
            on_press: app.add_input("1")
        Button:
            text: "2"
            on_press: app.add_input("2")
        Button:
            text: "="
            background_normal: ''
            background_color: "#ff8c00"
            on_press: app.eval_expression()
        Button:
            text: "3"
            on_press: app.add_input("3")
        Button:
            text: "4"
            on_press: app.add_input("4")
        Button:
            text: "/"
            on_press: app.add_input("/")
            background_normal: ''
            background_color: "#ff8c00"
        Button:
            text: "5"
            on_press: app.add_input("5")
        Button:
            text: "6"
            on_press: app.add_input("6")
        Button:
            text: "x"
            on_press: app.add_input("*")
            background_normal: ''
            background_color: "#ff8c00"
        Button:
            text: "7"
            on_press: app.add_input("7")
        Button:
            text: "8"
            on_press: app.add_input("8")
        Button:
            text: "-"
            on_press: app.add_input("-")
            background_normal: ''
            background_color: "#ff8c00"
        Button:
            text: "9"
            on_press: app.add_input("9")
        Button:
            text: "0"
            on_press: app.add_input("0")
        Button:
            text: "+"
            on_press: app.add_input("+")
            background_normal: ''
            background_color: "#ff8c00"
        
